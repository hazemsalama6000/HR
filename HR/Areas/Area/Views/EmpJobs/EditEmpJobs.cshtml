@{ Layout = null;}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <div class="modal-title"> <strong>تعديل العمل المسند</strong></div>
        </div>
        <div class="modal-body">
            <input type="hidden" id="JobsList" value="@ViewBag.JobsList" />
            <input type="hidden" id="ObjectEdit" value="@ViewBag.ObjectEdit" />
            <input type="hidden" ng-model="EmpJobs.ID" />

            <div class="row">
                <div class="col-md-12">

                    <form class="form-horizontal"> 

                        <div class="row">
                            <label class="col-md-2"> الوظيفة </label>
                            <select data-live-search="true" class="selectpicker form-control col-md-10" ng-options="x.ID as x.Name for x in JobsList" ng-model="EmpJobs.JobID"></select>
                        </div>

                        @*<br />*@

                        @*<div class="row">
                            <label class="col-md-2"> وظيفة اساسية </label>
                            <input type="checkbox" class="col-md-2" ng-value="true" ng-model="EmpJobs.MasterJobFlag" />
                        </div>*@
                        <br />
                        <div class="row">
                            <label class="col-md-2">من</label>
                            <input type="date" class="form-control col-md-4" ng-model="EmpJobs.fromDate" />
                            <span>
                                <label class="col-md-2">الي</label>
                                <input type="date" class="form-control col-md-4" ng-model="EmpJobs.toDate" />
                            </span>
                           
                         </div>

                        <br />
                        <div class="row">
                            <label class="col-md-2">ملاحظات</label>
                            <textarea class="col-md-4 form-control" ng-model="EmpJobs.Note"></textarea>
                            <div class="col-md-2"></div>
                          
                        </div>

                    </form>

                </div>
            </div>

        </div>
        <div class="modal-footer">
            <label class="btn btn-primary" ng-click="EditEmpJobsEnd()"> حفظ </label>
        </div>

    </div>
</div>
