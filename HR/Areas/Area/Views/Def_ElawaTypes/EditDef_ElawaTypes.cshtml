@{ Layout = null;}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <div class="modal-title">
                تعديل العلاوة
            </div>
        </div>


        <div class="modal-body">
            <div class="row">
                <input type="hidden" id="Def_ElawaTypevalueID" value="@ViewBag.Def_ElawaType"/>

                <form class="form-horizontal">
                    <input type="hidden" ng-model="ElawaType.ID"/>
                    
                    <div class="row">
                        <label class="control-label col-md-3">التاريخ</label>
                        <input type="date" class="form-control col-md-7" ng-model="ElawaType.DateAdded" />
                    </div>
                    <br />
                    <div class="row">
                        <label class="control-label col-md-3">اسم العلاوة</label>
                        <input type="text" class="form-control col-md-7" ng-model="ElawaType.Name" />
                    </div>
                    <br />
                    <div class="row">
                        <label class="control-label col-md-3">نسبة من الاساسي</label>
                        <input type="text" class="col-md-3 form-control"  ng-disabled="ElawaType.Value" ng-model="ElawaType.SalaryPercent" />

                        <label class="control-label col-md-1"> القيمة </label>
                        <input type="text" class="col-md-3 form-control" ng-disabled="ElawaType.SalaryPercent" ng-model="ElawaType.Value" />
                    </div>
                   
                    <br />
                    <div class="row">
                        <label class="col-md-4 control-label"> دورية <input type="checkbox" ng-value="true" ng-model="ElawaType.Repeated" /></label>
                        <label class="col-md-3 control-label"> مضمومة <input type="checkbox" ng-value="true" ng-model="ElawaType.Included" /> </label>
                        <label class="col-md-3 control-label"> خاضعة للضريبة <input type="checkbox" ng-value="true" ng-model="ElawaType.Taxed" /></label>
                    </div>

                </form>
            </div>
        </div>

        <div class="modal-footer">
            <label class="btn btn-danger" ng-click="EditDef_ElawaTypesEnd()">حفظ</label>
        </div>

    </div>
</div>
