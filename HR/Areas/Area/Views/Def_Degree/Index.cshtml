
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin:auto 0px">
    <div class="col-md-12">

        <input type="hidden" id="Def_DegreeViewBag" value="@ViewBag.Def_DegreeViewBag" />


        <div  ng-controller="Def_DegreeController">

            <div class="panel panel-default">

                <div class="panel panel-heading">
                    <div class="panel-title text-center" ><strong>تعريف الدرجة الوظيفية  </strong> </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <label class="btn btn-danger col-md-3" ng-click="AddDef_Degree()"> تعريف الدرجة الوظيفية </label>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">

                            <table class="table table-bordered table-hover table-responsive table-striped">
                                <tr>
                                    <th class="text-center">الدرجة الوظيفية</th>
                                </tr>

                                <tr ng-repeat="x in Def_Degrees">
                                    <td>{{x.Name}} </td>
                                    <td>
                                        <label class="btn btn-success" ng-click="EditDef_Degree(x.ID)"> تعديل </label>
                                        <label class="btn btn-danger" ng-click="DeleteDef_Degree(x.ID)"> حذف </label>
                                    </td>
                                </tr>
                            </table>


                        </div>
                    </div>

                </div>

            </div>

        </div>


    </div>
</div>


<script>

    var app = angular.module("Hr", []);
    app.controller("Def_DegreeController", function ($scope, $http,$compile, $filter) {

        $scope.Def_Degrees = angular.fromJson($("#Def_DegreeViewBag").val());

        $scope.DeleteDef_Degree = function (ID) {
            $http.get("/Area/Def_Degree/DeleteDef_Degree?ID="+ID).then(function (res) {
                if (res.data.action == "yes") {
                    $scope.Def_Degrees = angular.fromJson(res.data.Def_DegreeList);
                    toastr.success(res.data.msg, 'Information', { timeOut: 5000 });
                }
                else {
                    toastr.error(res.data.msg, 'Information', { timeOut: 5000 });
                }
            });
        }


        $scope.AddDef_Degree = function () {
            $scope.Def_Degree = {};
            $http.get("/Area/Def_Degree/AddDef_Degree").then(function (res) {
                $("#myModal").empty();
                $el =  $("#myModal").html(res.data);
                $compile($el)($scope);
                $("#myModal").modal('show');
            });
        }

        $scope.AddDef_DegreeEnd = function () {

            $http.post("/Area/Def_Degree/AddDef_DegreeEnd", $scope.Def_Degree).then(function (res) {
                if(res.data.action=="yes"){
                    $scope.Def_Degrees = angular.fromJson(res.data.Def_DegreeList);
                    toastr.success(res.data.msg, 'Information', { timeOut: 5000 });
                }
                else {
                    toastr.error(res.data.msg, 'Information', { timeOut: 5000 });
                }
            });
        }


        $scope.EditDef_Degree = function (ID) {
            $scope.Def_Degree = {};
            $http.get("/Area/Def_Degree/EditDef_Degree?ID="+ID).then(function (res) {
                $("#myModal").empty();
                $el = $("#myModal").html(res.data);
                $compile($el)($scope);
                $scope.Def_Degree = angular.fromJson($("#Def_DegreeBag").val());
                $("#myModal").modal('show');
            });
        }

        $scope.EditDef_DegreeEnd = function () {

            $http.post("/Area/Def_Degree/EditDef_DegreeEnd", $scope.Def_Degree).then(function (res) {
                if (res.data.action == "yes") {
                    $scope.Def_Degrees = angular.fromJson(res.data.Def_DegreeList);
                    toastr.success(res.data.msg, 'Information', { timeOut: 5000 });
                }
                else {
                    toastr.error(res.data.msg, 'Information', { timeOut: 5000 });
                }
            });
        }


    });



</script>
















