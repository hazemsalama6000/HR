
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin:auto 0px">
    <div class="col-md-12">

        <input type="hidden" id="Def_MilitaryServiceViewBag" value="@ViewBag.Def_MilitaryServiceViewBag" />


        <div  ng-controller="Def_MilitaryServiceController">

            <div class="panel panel-default">

                <div class="panel panel-heading">
                    <div class="panel-title text-center" ><strong>تعريف الحالة العسكرية  </strong> </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <label class="btn btn-danger col-md-3" ng-click="AddDef_MilitaryService()"> تعريف الحالة العسكرية </label>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">

                            <table class="table table-bordered table-hover table-responsive table-striped">
                                <tr>
                                    <th class="text-center">الحالة العسكرية</th>
                                </tr>

                                <tr ng-repeat="x in Def_MilitaryServices">
                                    <td>{{x.Name}} </td>
                                    <td>
                                        <label class="btn btn-success" ng-click="EditDef_MilitaryService(x.ID)"> تعديل </label>
                                        <label class="btn btn-danger" ng-click="DeleteDef_MilitaryService(x.ID)"> حذف </label>
                                    </td>
                                </tr>
                            </table>


                        </div>
                    </div>

                </div>

            </div>

        </div>


    </div>
</div>


<script>

    var app = angular.module("Hr", []);
    app.controller("Def_MilitaryServiceController", function ($scope, $http,$compile, $filter) {

        $scope.Def_MilitaryServices = angular.fromJson($("#Def_MilitaryServiceViewBag").val());

        $scope.DeleteDef_MilitaryService = function (ID) {
            $http.get("/Area/Def_MilitaryService/DeleteDef_MilitaryService?ID="+ID).then(function (res) {
                if (res.data.action == "yes") {
                    $scope.Def_MilitaryServices = angular.fromJson(res.data.Def_MilitaryServiceList);
                    toastr.success(res.data.msg, 'Information', { timeOut: 5000 });
                }
                else {
                    toastr.error(res.data.msg, 'Information', { timeOut: 5000 });
                }
            });
        }


        $scope.AddDef_MilitaryService = function () {
            $scope.Def_MilitaryService = {};
            $http.get("/Area/Def_MilitaryService/AddDef_MilitaryService").then(function (res) {
                $("#myModal").empty();
                $el =  $("#myModal").html(res.data);
                $compile($el)($scope);
                $("#myModal").modal('show');
            });
        }

        $scope.AddDef_MilitaryServiceEnd = function () {

            $http.post("/Area/Def_MilitaryService/AddDef_MilitaryServiceEnd", $scope.Def_MilitaryService).then(function (res) {
                if(res.data.action=="yes"){
                    $scope.Def_MilitaryServices = angular.fromJson(res.data.Def_MilitaryServiceList);
                    toastr.success(res.data.msg, 'Information', { timeOut: 5000 });
                }
                else {
                    toastr.error(res.data.msg, 'Information', { timeOut: 5000 });
                }
            });
        }


        $scope.EditDef_MilitaryService = function (ID) {
            $scope.Def_MilitaryService = {};
            $http.get("/Area/Def_MilitaryService/EditDef_MilitaryService?ID="+ID).then(function (res) {
                $("#myModal").empty();
                $el = $("#myModal").html(res.data);
                $compile($el)($scope);
                $scope.Def_MilitaryService = angular.fromJson($("#Def_MilitaryServiceBag").val());
                $("#myModal").modal('show');
            });
        }

        $scope.EditDef_MilitaryServiceEnd = function () {

            $http.post("/Area/Def_MilitaryService/EditDef_MilitaryServiceEnd", $scope.Def_MilitaryService).then(function (res) {
                if (res.data.action == "yes") {
                    $scope.Def_MilitaryServices = angular.fromJson(res.data.Def_MilitaryServiceList);
                    toastr.success(res.data.msg, 'Information', { timeOut: 5000 });
                }
                else {
                    toastr.error(res.data.msg, 'Information', { timeOut: 5000 });
                }
            });
        }


    });



</script>
















